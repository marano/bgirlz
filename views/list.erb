<html>
  <head>
    <title>black girlz html publisher</title>
    <script type='text/javascript' src='//ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js'></script>
    <link href='/list.css' media='all' rel='stylesheet' />
  </head>
  <body>
    <table>
      <tr>
        <td></td>
        <td>Event</td>
        <td>Name</td>
        <td>Link</td>
      <tr/>
      <% @pages.each do |page| %>
        <tr>
          <td>
            <form id='delete_page_<%= page.salt %>_<%= URI.encode(page.name) %>' action="<%= page.relative_link_to_self %>" method='post'>
              <input type='hidden' name='_method' value='delete'/>
              <a href='#' class='delete'>delete</a>
            </form>
          </td>
          <td>
            <%= page.event %>
          </td>
          <td>
            <%= page.name %> <%= page.middle_initial %> <%= page.last_name %>
          </td>
          <td>
            <a href="<%= page.relative_link_to_self %>"><%= page.relative_pretty_link_to_self %></a>
          </td>
        </tr>
      <% end %>
    </table>

    <script>
      $(function () {
        $('.delete').click(function (e) {
          var ok = confirm("Are you sure you want to delete that page?");
          if (ok) {
            $(e.target).parent().submit();
          }
          e.preventDefault();
        });
      });
    </script>
  </body>
</html>
